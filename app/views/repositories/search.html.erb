<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repos %>
    <ul>
    <% @repos.each do |repo| %>
      <li>
        Name: <%= repo["name"] %><br>
        URL: <%= repo["location"]["address"] %><br>
        Description: <%= repo["stats"]["checkinsCount"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
